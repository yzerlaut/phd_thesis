journal = {The Journal of neuroscience : the official journal of the Society for Neuroscience},
keywords = {Action Potentials,Action Potentials: physiology,Animals,Male,Models, Neurological,Neurons,Neurons: physiology,Normal Distribution,Organ Culture Techniques,Rats,Rats, Sprague-Dawley},
month = {jan},
